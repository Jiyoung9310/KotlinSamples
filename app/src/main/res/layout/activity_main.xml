<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jiyoung.example.kotlin.com.kotlinsamples.MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/BtnLapism"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lapism searchBar"
        ads:layout_constraintBottom_toTopOf="@id/textView1"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/BtnMancj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mancj searchBar"
        ads:layout_constraintBottom_toTopOf="@id/BtnYalantis"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toBottomOf="@id/BtnLapism"
        />

    <Button
        android:id="@+id/BtnYalantis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yalantis Filter"
        ads:layout_constraintBottom_toTopOf="@id/textView1"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toBottomOf="@id/BtnMancj"
        />

    <Button
        android:id="@+id/BtnQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QRcode Reader"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toBottomOf="@id/textView1"
        />

    <com.google.android.gms.ads.AdView
        android:id="@+id/avBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>


</android.support.constraint.ConstraintLayout>
